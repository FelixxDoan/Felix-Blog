---
import { type CollectionEntry, getCollection, render } from "astro:content";
import BlogPost from "../../../layouts/BlogPost.astro";

export async function getStaticPaths() {
  const posts = (await getCollection("blog")).filter((p) => p.data.lang === "en");
  return posts.map((post) => ({
    params: { slug: post.data.slug ?? post.id.replace(/^en\//, '') },
    props: post,
  }));
}

type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await render(post);

const switchUrl = `/vi/blog/${post.data.slug ?? post.id.replace(/^en\//, '')}`;
---

<BlogPost {...post.data} lang="en" switchUrl={switchUrl}>
  <Content />
</BlogPost>
